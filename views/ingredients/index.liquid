<h1>Select ingredients you have on hand to search for cocktail recipes</h1>
<div>
  <div class="ingredient-container">
    {% for ingredient in ingredients %}
    {% comment %} <a href="/ingredients/{{ ingredient._id }}"> {% endcomment %}
      <div class="img-name-pic">
        <img src="{{ingredient.image}}" alt="Image of ingredient"> 
        <h3> {{ingredient.name}}</h3>
    </div>
  {% endfor %}
  </div>
</div>
<form action=""></form>
{% endblock %}
