{% layout "layout.liquid" %} {% block content %}
      <div>
        <article>
          <h2>
            {{ cocktail.name }}
          </h2>
          <h3>
        <img src="{{cocktail.image}}" alt=""> <br>
        Ingredients: <br>
        {% for ingredients in cocktail.ingredients%}
            -{{ingredients}}-
            {%endfor%} 
            <br> <br>
          Measurements: <br>
          {% for measurements in cocktail.measurements%}
            -{{measurements}}-
            {%endfor%}
        <br> <br>
          Preparation: <br>
          {{cocktail.preparation}} <br> <br>
        
        </h3>

          <form action="/cocktails/{{ cocktail._id }}?_method=DELETE" method="POST">
            <input type="submit" value="Remove from My Cocktails List" />
          </form>
          <a href="/cocktails/"><button>Back to Main</button></a>
        </article>
      </div>
{% endblock %}







